<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_header_fb"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/p4rc_dark_blue_color"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.p4rc.sdk.view.CustomButton
            android:id="@+id/btn_close_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/p4rc_dark_blue_color"
            android:minWidth="30dp"
            android:padding="5dp"
            android:text="@string/x"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000">

        <RelativeLayout
            android:id="@+id/main_conten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_header"
            android:layout_width="60px"
            android:layout_height="117px"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
            android:background="@drawable/close_back"
            android:visibility="visible">

            <com.p4rc.sdk.view.CustomButton
                android:id="@+id/btn_close"
                android:layout_width="60px"
                android:layout_height="117px"
                android:background="@drawable/ic_close" />

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>